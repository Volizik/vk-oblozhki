.settings
	display flex
	flex-direction column
	width 100%
	grid-area settings
	border-left 1px solid #17181c
	+below(1140px)
		border-top 5px solid #17181c
		border-left none
	&__tabs
		width 100%
	&__tab
		padding 0 10px
		display inline-flex
		justify-content center
		align-items center
		height 32px
		font-size 15px
		font-weight 700
		color c_black
		background-color #fbfbfb
	&__body
		height 100%
		background-color #fff
	&__span
		padding 10px
		display block
		font-size 11px
	&__block
		display flex
		border-bottom 1px solid #ccc
		&:first-of-type
			border-top 1px solid #ccc
	&__col1
		display flex
		align-items baseline
		flex-basis 40px
		border-right 1px solid #ccc
	&__col2
		width 100%
	&__switch
		display flex
		align-items center
		height 40px
	.switch
		margin-x(12px)
	&__title
		padding-x(15px)
		display flex
		align-items center
		height 40px
		font-size 15px
		font-weight 700
		cursor pointer
		&--active
			color #c00027
			.settings__arrow
				transform: rotate(180deg)
	&__subtitle
		margin-top 20px
		font-size 15px
		font-weight 700
	&__arrow
		margin-left 10px
		display block
		size(10px)
		cursor pointer
		background url(../images/arrow-down.png) center center no-repeat
		transition .3s
	&__col2-body
		padding 10px 15px
		display none
		overflow hidden
	&__col2-row
		margin-bottom 20px
		display flex
		align-items center
		+below(1650px)
			flex-direction column
	&__label
		padding-right 10px
		display flex
		align-items center
		width 100%
		+below(1650px)
			margin-bottom 20px
			padding 0
		&:last-of-type
			padding-right 0
			+below(1650px)
				margin-bottom 0
	&__label-text
		margin-right 10px
		font-size 14px
		font-weight 700
		line-height 1
		white-space nowrap
	&__input
		padding-x(5px)
		width 100%
		height 35px
		border 1px solid #ccc
		border-radius 5px
	&__imags-list
		display flex
		flex-wrap wrap
		img
			margin 5px
			display block
			size(70px)
			object-fit cover
