.switch
	position relative
	display block
	width 20px
	height 13px
	cursor pointer
	border-radius 10px
	&__slider
		position absolute
		z-index 2
		top 50%
		left 0
		transform translate(-20%, -50%)
		display block
		size(16px)
		background-color #fff
		border 1px solid #c9e0c9
		border-radius 50%
		transition .3s
	&__bg
		position absolute
		z-index 1
		top 0
		left 0
		size(100%)
		background-color #c82244
		border 1px solid #d00027
		border-radius 10px
		transition .3s
	&__input
		display none
		&:checked ~ .switch__bg
			background-color #64bd63
			border 1px solid #50b54e
		&:checked ~ .switch__slider
			transform translate(50%, -50%)

