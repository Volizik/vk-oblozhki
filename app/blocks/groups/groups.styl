.groups
	display block
	width 100%
	.yellow-btn
		min-width 90px
	.container
		padding 20px
		background-color #fff
	&__table
		width 100%
	&__thead
		display flex
		height 50px
		font-size 14px
		color #7a7a7a
	&__th
		justify-content center
	&__th, &__td
		display flex
		align-items center
		&:nth-of-type(1)
			flex-basis 50%
			.yellow-btn
				margin-left auto
		&:nth-of-type(2)
			flex-basis 25%
		&:nth-of-type(3)
			flex-basis 25%
	&__td
		padding 10px
	&__tr
		margin-bottom 15px
		display flex
		height 75px
		border 1px solid #ccc
		border-radius 5px
	&__td-text
		flex-grow 1
		font-size 14px
		font-weight 600
		text-align center
		color #424242
