.sidebar
	padding 10px 20px
	display block
	grid-area sidebar
	background-color #fff
	border-right 1px solid #17181c
	&__row
		margin-bottom 10px
		display flex
		justify-content space-between
		align-items center
	.select
		width 100%
		height 35px
		font-size 15px
		color #7a7a7a
		border-color #7a7a7a
		border-radius 4px
	.yellow-btn
		margin-left 10px
	.widgets
		margin-top 30px
		margin-bottom 10px
		&__title
			margin-bottom 20px
			font-size 15px
			font-weight 700
			color #c00027
		&__list
			display flex
			flex-direction column
		&__item
			margin-bottom 10px
			display flex
			align-items center
			height 46px
			font-size 14px
			font-weight 700
			img
				margin-right 20px
				size(50px)