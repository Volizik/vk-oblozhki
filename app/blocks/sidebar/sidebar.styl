.sidebar
	padding 10px 20px
	display block
	grid-area sidebar
	background-color #fff
	border-right 1px solid #17181c
	+below(1360px)
		border-right none
		border-bottom 5px solid #17181c
	&__row
		margin-bottom 10px
		display flex
		justify-content space-between
		align-items center
	.select
		width 100%
		height 35px
		font-size 15px
		color #7a7a7a
		border-color #7a7a7a
		border-radius 4px
	.yellow-btn
		margin-left 10px
	.widgets
		margin-top 30px
		margin-bottom 10px
		&__title
			margin-bottom 20px
			font-size 15px
			font-weight 700
			color #c00027
		&__list
			display flex
			flex-direction column
			+below(1360px)
				flex-direction row
				flex-wrap wrap
		&__item
			margin-bottom 10px
			display flex
			align-items center
			height 46px
			font-size 14px
			font-weight 700
			+below(1360px)
				margin-x(10px)
				flex-direction column
				justify-content center
				width 120px
				height auto
			img
				margin-right 20px
				size(50px)
				+below(1360px)
					margin-right 0
					size(120px)