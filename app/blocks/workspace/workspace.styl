.workspace
	padding 10px 20px
	display block
	background-color #fff
	&__subtitle
		margin-bottom 15px
		font-size 11px
	&__board
		width 100%
		height 200px
		background-color #f7f7f7
		border 1px solid c_black
	&__block
		margin-top 30px
		display flex
	&__block-img
		margin-top 5px
		margin-right 30px
		size(75px)
		flex-shrink 0
	&__block-title
		margin-bottom 10px
		font-size 16px
		font-weight 700
	&__block-desc
		font-size 14px
		font-weight 400
		line-height 18px
	&__action
		margin-top 30px
		display flex
		align-items center
	&__action-link
		width 100%
		font-size 16px
		font-weight 700
		text-align center
		color c_black
		transition .3s
		&:hover
			text-shadow 3px 3px 10px c_black
	.yellow-btn
		&:not(:last-of-type)
			margin-right 20px