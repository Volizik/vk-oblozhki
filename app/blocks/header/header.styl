.header
	display block
	grid-area header
	background-color c_black
	&__top
		display flex
		align-items center
		height 109px
	&__logo
		width 100%
		max-width 185px
		font-size 22px
		font-weight 700
		text-transform uppercase
		color #fff
	&__user
		margin-left auto
		display flex
		align-items center
		&-name
			margin-right 20px
			font-size 14px
			font-weight 400
			color #fff
		&-icon
			margin 5px
			size(40px)
			border-radius 50%
		&-quit
			margin-left 10px
			background-color transparent
			border none
	&__actions-line
		width 100%
		height 65px
		background-color #fff
		.container
			display flex
			height 100%
			align-items center
	.new-cover
		margin-right 30px
		font-size 14px
		font-weight 700
		text-transform uppercase
		color #f50000
		background-color transparent
		border none
	&__actions
		display flex
		&-link
			position relative
			margin-right 30px
			display flex
			align-items center
			font-size 14px
			font-weight 400
			white-space nowrap
			color #424242
			&:hover&:before
				width 100%
			&:before
				position absolute
				left 0
				bottom -4px
				width 0
				height 2px
				content ''
				background-color #ffa000
				transition .4s
			span
				margin-left 8px
				display flex
				align-items center
				justify-content center
				flex-shrink 0
				width 24px
				height 16px
				font-size 12px
				color #fff
				background-color #ffa000
				border-radius 3px
	.receive-btn
		margin-left auto
		display flex
		justify-content center
		align-items center
		width 100%
		max-width 245px
		height 35px
		font-size 14px
		font-weight 700
		text-transform uppercase
		color #fff
		background-color #c00027
		border none
		border-radius 3px
		&:active
			box-shadow inset 0 0 8px #000